<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/root"
    android:orientation="vertical">

    <com.verygoodsecurity.vgscollect.widget.VGSEditText
        android:id="@+id/vgsEditTextNumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputType="number" />

    <com.verygoodsecurity.vgscollect.widget.VGSEditText
        android:id="@+id/vgsEditTextNumberPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputType="numberPassword" />

    <com.verygoodsecurity.vgscollect.widget.VGSEditText
        android:id="@+id/vgsEditTextText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputType="text" />

    <com.verygoodsecurity.vgscollect.widget.VGSEditText
        android:id="@+id/vgsEditTextTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputType="textPassword" />

    <com.verygoodsecurity.vgscollect.widget.VGSEditText
        android:id="@+id/vgsEditTextDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputType="date" />

    <com.verygoodsecurity.vgscollect.widget.VGSEditText
        android:id="@+id/vgsEditTextCapCharacters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:inputType="textCapCharacters" />
</LinearLayout>