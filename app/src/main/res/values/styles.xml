<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/navyBlue</item>
        <item name="colorPrimaryDark">@color/kleinBlue</item>
        <item name="colorAccent">@color/navyBlue</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@color/fiord</item>
        <item name="actionBarStyle">@style/ActionBarStyle</item>
    </style>

    <style name="ActionBarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="logo">@drawable/ic_actionbar_logo</item>
        <item name="displayOptions">useLogo|showHome|showTitle</item>
    </style>

    <style name="AppTheme.StartActivity">
        <item name="actionBarStyle">@style/ActionBarStyle.StartActivity</item>
    </style>

    <style name="ActionBarStyle.StartActivity">
        <item name="title">@string/start_activity_app_bar_title</item>
    </style>

    <style name="CustomButtonText" />

    <style name="CustomButtonText.Title" parent="TextAppearance.MaterialComponents.Subtitle2" />

    <style name="CustomButtonText.Description" parent="TextAppearance.MaterialComponents.Caption" />

    <style name="CustomButtonText.Action" parent="TextAppearance.MaterialComponents.Body2">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:textColor">?attr/colorAccent</item>
    </style>

    <style name="EditText">
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingStart">@dimen/vgs_field_horizontal_padding</item>
        <item name="android:paddingEnd">@dimen/vgs_field_horizontal_padding</item>

        <item name="android:textSize">@dimen/vgs_field_text_size</item>
        <item name="textSize">@dimen/vgs_field_text_size</item>
    </style>

    <style name="counter_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#00ff6f</item>
        <item name="android:fontFamily">@font/robotomono_light</item>
    </style>

    <style name="counter_overflow_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#000</item>
        <item name="android:textSize">20dp</item>
        <item name="android:fontFamily">@font/robotomono_light</item>
    </style>

    <style name="error_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#77ff0000</item>
        <item name="textStyle">bold</item>
    </style>

    <style name="hint_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">22dp</item>
        <item name="textStyle">bold</item>
    </style>

    <style name="helper_appearance" parent="@android:style/TextAppearance">
        <item name="android:textColor">#880000ff</item>
        <item name="android:textSize">17dp</item>
        <item name="android:fontFamily">@font/robotomono_light</item>
    </style>

    <style name="text_appearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
